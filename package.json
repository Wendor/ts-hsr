{
  "name": "turn-based-combat-system",
  "version": "1.0.0",
  "description": "A turn-based combat system inspired by Honkai: Star Rail.",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc-esm && cp public/index.html dist/index.html",
    "dev": "concurrently --raw 'tsc --watch --preserveWatchOutput' 'es-dev-server --app-index index.html --root-dir dist --node-resolve --watch --open'",
    "postdev": "npm run build",
    "prepare": "husky",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@digitak/tsc-esm": "^3.1.4",
    "@types/node": "^16.18.126",
    "concurrently": "^9.1.2",
    "es-dev-server": "^2.1.0",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "tsx": "^4.19.3",
    "typescript": "^4.5.4"
  },
  "keywords": [
    "turn-based",
    "combat",
    "typescript"
  ],
  "author": "Anton Solomonov",
  "license": "MIT"
}
